<main id="search">
    <section class="game-search">
        <h1>Search</h1>

        <form class="search-form" method="GET">
            <input type="text" class="search-game" name="name" value="{{name}}" placeholder="Search here...">
            {{>platform}}
            <button type="submit" class="btn-search">Search</button>
        </form>
        {{#if game}}

        <div class="search-result">
            <div class="search-list">
                {{#each game}}
                    {{>game}}
                {{/each}}
            </div>
        </div>

        {{else}}

        <div class="no-match">
                <p>No match was found!</p>
            </div>
            {{/if}}
    </section>
</main>